<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="checkout" inherit_id="website_sale.checkout">
        <xpath expr="//form" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
    </template>

    <template id="address" inherit_id="website_sale.address">
        <xpath expr="//form/.." position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <xpath expr="//form/.." position="after">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="mt-2">Shipping address details are incomplete</h2>
                    <div
                        class="alert alert-warning mt-3"
                    > Please reach out to us using this <a
                            href="/contactus"
                        >contact form</a>. </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="address_kanban" inherit_id="website_sale.address_kanban">
        <xpath expr="//a[hasclass('js_edit_address')]" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
    </template>

</odoo>
